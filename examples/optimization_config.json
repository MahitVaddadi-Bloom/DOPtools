{
  "name": "Model Optimization Configuration",
  "description": "Optuna-based hyperparameter optimization for machine learning models",
  "data": {
    "input_file": "descriptors.csv",
    "target_column": "activity",
    "id_column": "ID"
  },
  "model": {
    "type": "random_forest",
    "parameters": {
      "n_estimators": [50, 100, 200, 500],
      "max_depth": [3, 5, 10, null],
      "min_samples_split": [2, 5, 10],
      "min_samples_leaf": [1, 2, 4]
    }
  },
  "optimization": {
    "n_trials": 100,
    "cv_folds": 5,
    "scoring": "r2",
    "direction": "maximize"
  },
  "output": {
    "study_name": "rf_optimization",
    "results_dir": "optimization_results"
  },
  "example_usage": "doptools models optimize --config optimization_config.json"
}